@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title></title>
    <link href=@Url.Content("~/Styles/app.css") rel="stylesheet" type="text/css"/>
</head>
<body>
<div>
    <form asp-controller="Auth" asp-action="Login" method="post">
         <input type="hidden" asp-for="ReturnUrl"/>
        <div class="header">Login</div>
        <div class="block">
            <label>Username</label>
            <input class="input" asp-for="UserName"/>
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="block">
            <label>Password</label>
            <input class="input" asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="block">
            <button class="button" type="submit">Sign In</button>
        </div>
        <a class="switch-button" asp-controller="Auth" asp-action="Login" asp-route-returnUrl=@Model.ReturnUrl>Register</a>
    </form>
</div>
</body>
</html>